<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:paddingBottom="@dimen/bottom_offset"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F3F1"
        android:padding="25dp">

        <TextView
            android:id="@+id/home_page_name_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/work_sans"
            android:lineHeight="26sp"
            android:text="@string/cooksy"
            android:textColor="#1C0F13"
            android:textFontWeight="600"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:targetApi="p" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/home_page_name_text"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecipesDayRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchView"
            tools:listitem="@layout/layout_for_inspiration_item" />

        <TextView
            android:id="@+id/recommend_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:fontFamily="@font/work_sans"
            android:lineHeight="38sp"

            android:text="@string/ren_redzepi_n_recommends_you"
            android:textColor="#1C0F13"
            android:textFontWeight="600"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/RecipesDayRv"
            tools:targetApi="p" />

        <androidx.cardview.widget.CardView
            android:id="@+id/recommend_card"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/recommend_text_title">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="25dp"
            >
            <ImageView
                android:id="@+id/recommend_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/chef"
                />
            <TextView
                android:id="@+id/recommend_main_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/recommend_image"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/vegan_thai_curry_soup"
                android:layout_marginTop="15dp"
                android:textColor="#1C0F13"
                android:textFontWeight="500"
                android:textSize="21sp"
                android:fontFamily="@font/work_sans"
                android:lineHeight="25sp"
                />
            <TextView
                android:id="@+id/recommend_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recommend_main_text"
                android:layout_marginTop="15dp"
                android:text="@string/sub_text_recommend"
                android:textColor="#1C0F13"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/recommend_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_50_min"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/clock"
                android:textSize="15sp"
                android:textColor="@color/grey"
                app:layout_constraintTop_toBottomOf="@id/recommend_sub_text"
                app:layout_constraintStart_toStartOf="parent"
            />
            <TextView
                android:id="@+id/recommend_ppl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="4 ppl"
                android:layout_marginLeft="35dp"
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:drawableLeft="@drawable/dishes"
                app:layout_constraintTop_toBottomOf="@id/recommend_sub_text"
                app:layout_constraintStart_toEndOf="@id/recommend_time"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/browse_more_recipes"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="@string/browse_more_recieps"
            app:layout_constraintTop_toBottomOf="@id/recommend_card"
            app:layout_constraintStart_toStartOf="parent"
            app:cornerRadius="8dp"
            android:layout_marginTop="20dp"
            android:textColor="#1C0F13"
            android:textSize="20sp"
            android:fontFamily="@font/work_sans"
            android:textFontWeight="600"
            android:shadowColor="@android:color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            app:strokeColor ="@color/black"
            android:textAllCaps="false"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>