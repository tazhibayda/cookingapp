<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="25dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">


        <TextView
            android:id="@+id/RecipesTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/recipes_nof_the_day"
            android:layout_width="193dp"
            android:layout_height="76dp"
            android:textColor="#1C0F13"
            android:textSize="32sp"
            android:fontFamily="@font/work_sans"
            />

        <TextView
            android:id="@+id/RecipesName"
            android:text="TextView"
            android:textSize="16sp"
            android:textFontWeight="500"
            android:textColor="#1C0F13"
            android:lineHeight="22sp"
            app:layout_constraintTop_toBottomOf="@id/RecipesTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/work_sans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TableRow

            android:id="@+id/tableRow"
            android:layout_width="140dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/RecipesName"
            android:layout_marginTop="10dp"

            >

            <TextView
                android:id="@+id/recipe_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="105 min"
                android:textSize="14sp"
                app:drawableLeftCompat="@drawable/clock" />

            <TextView
                android:id="@+id/recipe_ppl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:paddingRight="0.5dp"
                android:text="4 ppl"
                android:textSize="14sp"
                app:drawableLeftCompat="@drawable/dishes" />
        </TableRow>

        <ImageView
            android:id="@+id/dayImage"
            android:src="@drawable/day_image"
            app:layout_constraintTop_toBottomOf="@id/tableRow"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="193dp"
            android:layout_height="121dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
